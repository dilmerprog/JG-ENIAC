<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <title>Ping Pong Multiplayer</title>
  <style>
    body {
      margin: 0;
      background-color: #3e1f47; /* Cor de fundo mais vibrante */
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
    }

    #gameArea {
      position: relative;
      width: 1000px; /* Tamanho aumentado da Ã¡rea de jogo */
      height: 500px; /* Tamanho aumentado da altura */
      background-color: #1d0c1b; /* Fundo escuro, mas mais vibrante */
      border: 4px solid #422c44;
      box-shadow: 0 0 20px rgba(255, 255, 255, 0.2);
    }

    .paddle {
      position: absolute;
      width: 10px; /* Largura das raquetes um pouco maior */
      height: 60px; /* Tamanho das raquetes mais longo */
    }

    #leftPaddle {
      left: 0;
      top: 50%;
      transform: translateY(-50%);
      background-color: #6d45c2; /* Cor vibrante para a raquete esquerda */
    }

    #rightPaddle {
      right: 0;
      top: 50%;
      transform: translateY(-50%);
      background-color: #1b3ae7; /* Cor vibrante para a raquete direita */
    }

    .paddle:hover {
      filter: brightness(1.3); /* Efeito de brilho quando o mouse passa sobre as raquetes */
    }
  </style>
</head>
<body>
  <div id="gameArea">
    <div id="leftPaddle" class="paddle"></div>
    <div id="rightPaddle" class="paddle"></div>
  </div>

  <script>
    const leftPaddle = document.getElementById('leftPaddle');
    const rightPaddle = document.getElementById('rightPaddle');
    const gameArea = document.getElementById('gameArea');

    const paddleSpeed = 7; // Aumentando a velocidade das raquetes
    const keys = {};

    document.addEventListener('keydown', (e) => keys[e.key] = true);
    document.addEventListener('keyup', (e) => keys[e.key] = false);

    function movePaddles() {
      const areaHeight = gameArea.clientHeight;
      const leftTop = parseInt(getComputedStyle(leftPaddle).top);
      const rightTop = parseInt(getComputedStyle(rightPaddle).top);

      // Movimento raquete esquerda
      if (keys['w'] && leftTop > 0) {
        leftPaddle.style.top = `${leftTop - paddleSpeed}px`;
      }
      if (keys['s'] && leftTop + leftPaddle.offsetHeight < areaHeight) {
        leftPaddle.style.top = `${leftTop + paddleSpeed}px`;
      }

      // Movimento raquete direita
      if (keys['ArrowUp'] && rightTop > 0) {
        rightPaddle.style.top = `${rightTop - paddleSpeed}px`;
      }
      if (keys['ArrowDown'] && rightTop + rightPaddle.offsetHeight < areaHeight) {
        rightPaddle.style.top = `${rightTop + paddleSpeed}px`;
      }

      requestAnimationFrame(movePaddles);
    }

    movePaddles();
  </script>
</body>
</html>

